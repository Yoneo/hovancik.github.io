<% wrap_layout :blog_layout do %>
  <article>
    <h1>
      <a href="<%= current_page.data.url %>"><%= current_page.data.title %></a>
    </h1>
    <small>Posted under 
      <% current_page.tags.each do |tag| %>
        <%= link_to tag, tag_path(tag) %>
      <% end %> on 
      <time><%= current_page.date.strftime('%b %e %Y') %></time>
    </small>
    <div class="article_text">
    <%= yield %>
    </div>
    <hr>
    <p class="social"><strong>Did you enjoy this? Copy-paste the link from the address bar to your favourite social network to share.</strong></p>
    <%= disqus %>
  </article>
<% end %>